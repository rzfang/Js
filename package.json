{
  "name": "js",
  "version": "0.1.1",
  "description": "RZ's personal Js libraries.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.json ./**/*.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/Js.git"
  },
  "keywords": [
    "js",
    "javascript",
    "node.js"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/Js/issues"
  },
  "homepage": "https://github.com/rzfang/Js#readme",
  "dependencies": {
    "@riotjs/compiler": "^5.2.1",
    "async": "^3.2.0",
    "node-sass": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-plugin-json": "^1.4.0",
    "husky": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  }
}
