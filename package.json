{
  "name": "rzjs",
  "version": "0.4.0",
  "description": "RZ's personal Js libraries.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js,.json ./*.js ./node/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/Js.git"
  },
  "keywords": [
    "js",
    "javascript",
    "node.js"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/Js/issues"
  },
  "homepage": "https://github.com/rzfang/Js#readme",
  "dependencies": {
    "@riotjs/compiler": "^6.3.2",
    "@riotjs/ssr": "^8.1.2",
    "async": "^3.2.2",
    "busboy": "^1.6.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "helmet": "^4.0.0",
    "node-sass": "^8.0.0",
    "riot": "^7.0.5",
    "sqlite3": "5.0.3"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-plugin-json": "^3.1.0",
    "pre-commit": "^1.2.2"
  },
  "peerDependencies": {
    "@riotjs/hydrate": "^6.0.0"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  }
}
